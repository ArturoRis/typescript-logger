{
  "name": "typescript-logger",
  "version": "2.0.0",
  "description": "A simple named logger for typescript",
  "main": "build/index.js",
  "scripts": {
    "build": "npm run clean && npm run create:index-src && npm run build:tsc && npm run build:bundle",
    "create:index-src": "barrelsby -D -d src",
    "build:tsc": "tsc",
    "build:bundle": "browserify build/index.js -s Logger -o release/Logger.js",
    "clean": "npm run clean:tsc && npm run clean:bundle",
    "clean:tsc": "rimraf build",
    "clean:bundle": "rimraf release",
    "serve:demo": "http-server .",
    "start": "npm run build && npm run serve:demo",
    "docs": "rimraf docs && typedoc --out docs src ",
    "release": "./release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArturoRis/typescript-logger.git"
  },
  "keywords": [
    "typescript",
    "logger",
    "log"
  ],
  "author": "Fabio Siliberto (fabio.siliberto@gmail.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ArturoRis/typescript-logger/issues"
  },
  "homepage": "https://github.com/ArturoRis/typescript-logger#readme",
  "devDependencies": {
    "barrelsby": "^2.2.0",
    "browserify": "^16.5.1",
    "http-server": "^0.12.1",
    "rimraf": "^3.0.2",
    "typedoc": "^0.17.3",
    "typescript": "^3.8.3"
  }
}
